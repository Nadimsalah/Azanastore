# Hostinger Deployment Configuration
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Deployment Method: 'ftp' or 'ssh'
DEPLOY_METHOD=ftp

# FTP Configuration (if using FTP deployment)
HOSTINGER_FTP_HOST=ftp.yourdomain.com
HOSTINGER_FTP_USER=your_ftp_username
HOSTINGER_FTP_PASSWORD=your_ftp_password
HOSTINGER_DEPLOY_PATH=/public_html

# SSH Configuration (if using SSH deployment)
HOSTINGER_SSH_HOST=yourdomain.com
HOSTINGER_SSH_USER=your_ssh_username
HOSTINGER_SSH_KEY=your_ssh_private_key
HOSTINGER_SSH_PORT=22
# HOSTINGER_DEPLOY_PATH=/home/username/public_html

# Node.js Configuration
NODE_ENV=production
PORT=3000

# Additional Environment Variables
# Add any other environment variables your app needs here
